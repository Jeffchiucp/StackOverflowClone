<style>
.in-a-box{
    border-top: 1px solid grey;

    padding: 10px;

}
#home-nav{
    display: inline-flex;
    list-style: none;
}
    #home-header{
        font-size: 18px;
        font-weight: 600;
    }
    #home-tabs{
        display: inline-flex;
        list-style: none;
        margin: 0px;
    }

        #home-tabs a{
            text-decoration: none;
            color: black;
        }

        #home-tabs li{
            margin: 0px 15px;
            padding: 0px;
        }

        .tab{
            padding: 3px 1px 0px 1px;
        }

        .date-tab.-createdAt{
            padding: 0px;
            border-top: 3px solid green;
            border-left: 1px solid grey;
            border-right: 1px solid grey;
            background-color: white;
        }

        .author-tab.author{
            padding: 0px;
            border-top: 3px solid green;
            border-left: 1px solid grey;
            border-right: 1px solid grey;
            background-color: white;
        }

        .home-date{
            font-size: 8px;
        }




</style>
<div id="home-nav">
    <h1 id="home-header">Questions</h1>

    <ul id="home-tabs">
        <a href="/home?sort=-createdAt" class="tab date-tab {{active}}"><li>By date</li></a>
        <a href="/home?sort=author" class="tab author-tab {{active}}"><li>By author</li></a>
    </ul>
</div>

{{#each post}}
<div class="in-a-box">
    <a href="/posts/{{this.id}}"><h2>{{this.title}}</h2></a>
    <p><a href="bylocation?q={{this.location}}">Location: {{this.location}}</a></p>
    <p><a href="byuser?q={{this.author._id}}">Author: {{this.author.username}}</a></p>
    <p class="home-date">Date: {{this.createdAt}}</p>
</div>
{{/each}}
